# Environment Variables

# Google Tag Manager ID
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics ID (if using directly)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# DoubleClick Floodlight ID
NEXT_PUBLIC_FLOODLIGHT_ID=XXXXXXXXXX

# Site URL (must use HTTPS)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# HTTPS redirect settings
NEXT_PUBLIC_FORCE_HTTPS=true

# Email Configuration for Wave Form
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here

# Cloudflare Turnstile (Bot Protection)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAB7QN7MFQd6tXzVo
TURNSTILE_SECRET=your-turnstile-secret-key

# Edit mode password (optional)
NEXT_PUBLIC_EDIT_PASSWORD=changeme
